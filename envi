<!-- ========== JAVASCRIPT ========== -->
<script>
function showSection(id) {
    document.querySelectorAll("section").forEach(s => s.classList.remove("active"));
    document.getElementById(id).classList.add("active");
}

function enviarWhatsApp() {
    const telefono = "17873080367";
    const mensaje = "Hola, quiero reservar un taxi üöñ";
    window.open(`https://wa.me/${telefono}?text=${encodeURIComponent(mensaje)}`, "_blank");
}

function abrirWhatsApp() {
    window.open("https://wa.me/17873080367", "_blank");
}

function switchLanguage(lang) {
    if (lang === "en") {
        document.getElementById("reserva-title").textContent = "Book Your Taxi";
        document.getElementById("mensaje-inicio").textContent =
            "Once your information is received, your reservation will be confirmed.";
        document.getElementById("servicios-title").textContent = "Services We Offer";
        document.querySelector(".submit-btn").textContent = "Book via WhatsApp";
    } else {
        location.reload();
    }
}
</script>

